<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:columnCount="2"
    android:rowCount="3"
    android:orientation="horizontal"
    android:id="@+id/gridlayout">

    <ImageView
        android:id="@+id/Logo_ThanhNien"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_gravity="left|top"
        android:layout_column="0"
        android:layout_row="0"
        android:layout_margin="25dp"
        android:src="@drawable/thanhnienn"

        />
    <ImageView
        android:id="@+id/Logo_VNExpress"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_column="1"
        android:layout_row="0"
        android:layout_margin="25dp"
        android:src="@drawable/vnexpress"
        />
    <ImageView
        android:id="@+id/Logo_VietnamNet"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_column="0"
        android:layout_row="1"
        android:layout_margin="25dp"
        android:src="@drawable/vietnamnet"
        />
    <ImageView
        android:id="@+id/Logo_TuoiTre"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_column="1"
        android:layout_row="1"
        android:layout_margin="25dp"
        android:src="@drawable/tuoitre"
        />
    <ImageView
        android:id="@+id/Logo_TinhTe"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_column="0"
        android:layout_row="2"
        android:layout_margin="25dp"
        android:src="@drawable/tinhte"
        />
    <ImageView
        android:id="@+id/Logo_GameK"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_column="1"
        android:layout_row="2"
        android:layout_margin="25dp"
        android:src="@drawable/gamek"
        />

</GridLayout>